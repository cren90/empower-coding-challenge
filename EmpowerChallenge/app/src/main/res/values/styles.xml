<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CompoundButtonRight" parent="Widget.MaterialComponents.Button">
        <item name="android:maxLines">1</item>
        <item name="minWidth">@dimen/view_medium</item>
        <item name="android:textSize">@dimen/increment_button_text_size</item>
        <item name="android:background">@drawable/background_right_round</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="CompoundButtonLeft" parent="Widget.MaterialComponents.Button">
        <item name="android:maxLines">1</item>
        <item name="minWidth">@dimen/view_medium</item>
        <item name="android:textSize">@dimen/increment_button_text_size</item>
        <item name="android:background">@drawable/background_left_round</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="TitleHeader">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/title_header</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeader">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sub_header</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeader.Grey">
        <item name="android:textColor">@color/trolley_grey</item>
    </style>

    <style name="SubHeader.Grey.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubHeader.Blue">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="SubHeader.Blue.SemiBold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="SubHeader.Blue.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Grey">
        <item name="android:textColor">@color/trolley_grey</item>
    </style>

    <style name="Body.Grey.Semibold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="BodyLarge">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/body_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTitle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sub_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>